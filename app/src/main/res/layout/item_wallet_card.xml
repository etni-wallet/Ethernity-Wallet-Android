<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp16"
    app:cardCornerRadius="@dimen/dp10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_card_texture">

        <TextView
            android:id="@+id/card_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Main Account" />

        <TextView
            android:id="@+id/card_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp30"
            android:textColor="@color/white"
            android:textSize="@dimen/sp28"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="$310.000" />

        <TextView
            android:id="@+id/card_address_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginBottom="@dimen/dp30"
            android:background="@drawable/background_card_address"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp8"
            android:paddingEnd="@dimen/dp8"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/ic_card_address_copy_paste"
            app:layout_constraintBottom_toTopOf="@id/card_action_send_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_name_tv"
            tools:text="0xRdad274.." />

        <TextView
            android:id="@+id/card_action_send_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp16"
            android:background="@drawable/background_card_action"
            android:padding="8dp"
            android:text="@string/action_send"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/ic_action_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_action_receive_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_address_tv" />

        <TextView
            android:id="@+id/card_action_receive_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp16"
            android:background="@drawable/background_card_action"
            android:padding="8dp"
            android:text="@string/action_receive"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/ic_action_receive"
            app:layout_constraintBaseline_toBaselineOf="@id/card_action_send_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_action_send_tv"
            app:layout_constraintTop_toBottomOf="@id/card_address_tv" />

        <ImageView
            android:id="@+id/card_action_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp30"
            android:src="@drawable/ic_card_action_dots"
            app:layout_constraintBottom_toBottomOf="@id/card_action_receive_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_action_receive_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>